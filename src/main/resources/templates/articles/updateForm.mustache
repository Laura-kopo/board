{{>layout/header}}

<form class="container" action="/articles/update" method="post">
    <input type="hidden" name = "id" value = "{{articleUpdate.id}}">
    <div class="mb-3">
        <label class="form-label">제목</label>
        <input type="text" name="title" value = "{{articleUpdate.title}}">
        <!--articleUpdate는 AtricleController에서 내가 설정한 수정데이터 Attribute Name-->
    </div>

    <div class="mb-3">
        <label for="form-label">내용</label>
        <textarea name="content">{{articleUpdate.content}}</textarea>
    </div>

    <button type="submit" class="btn btn-primary">수정 완료</button>
    <a href="/articles/index">목록으로 돌아가기</a>
</form>
{{>layout/footer}}
